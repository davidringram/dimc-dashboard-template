---
import Layout from "../../layouts/Layout.astro";
import { createSupabase } from "../../lib/supabase";

const { id } = Astro.params;
const supabase = createSupabase(Astro);

let saveError = null;

// 1. HANDLE SERVER ACTIONS
if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    const action = formData.get("action");

    // --- DELETE ---
    if (action === "delete") {
        const { error } = await supabase.from("leads").delete().eq("id", id);
        if (!error) return Astro.redirect("/dashboard?msg=deleted");
        saveError = error.message;
    }

    // --- ARCHIVE ---
    else if (action === "archive") {
        const { error } = await supabase
            .from("leads")
            .update({ archived: true })
            .eq("id", id);
        if (!error) return Astro.redirect("/dashboard?msg=archived");
        saveError = error.message;
    }

    // --- REACTIVATE ---
    else if (action === "reactivate") {
        const { error } = await supabase
            .from("leads")
            .update({
                archived: false,
                status: "New",
            })
            .eq("id", id);
        if (!error) return Astro.redirect(`/leads/${id}?msg=reactivated`);
        saveError = error.message;
    }

    // --- UPDATE (SAVE) ---
    else if (action === "update") {
        const status = formData.get("status")?.toString();
        let closed_at = null;
        if (status === "Won" || status === "Lost") {
            closed_at = new Date().toISOString();
        }

        const updates = {
            name: formData.get("name"),
            email: formData.get("email"),
            phone: formData.get("phone"),
            geo_location: formData.get("geo_location"),
            service: formData.get("service"),
            status: status,
            estimated_value:
                parseFloat(formData.get("estimated_value")?.toString() || "") ||
                0,
            notes: formData.get("notes"),
            utm_source: formData.get("utm_source"),
            utm_medium: formData.get("utm_medium"),
            utm_campaign: formData.get("utm_campaign"),
            updated_at: new Date().toISOString(),
            ...(status === "Won" || status === "Lost"
                ? { closed_at }
                : { closed_at: null }),
        };

        const { error } = await supabase
            .from("leads")
            .update(updates)
            .eq("id", id);

        if (!error) {
            return Astro.redirect(`/leads/${id}?saved=true`);
        } else {
            saveError = `Database Error: ${error.message}`;
        }
    }
}

// 2. FETCH LEAD DATA
const { data: lead, error } = await supabase
    .from("leads")
    .select("*")
    .eq("id", id)
    .single();

if (error || !lead) {
    return Astro.redirect("/dashboard");
}

// Helpers
const timeSince = (dateString: string) => {
    const date = new Date(dateString);
    return date.toLocaleDateString("en-US", {
        month: "short",
        day: "numeric",
        year: "numeric",
    });
};

const formatDateTime = (dateString: string) => {
    if (!dateString) return "No updates recorded";
    return new Date(dateString).toLocaleString("en-US", {
        month: "short",
        day: "numeric",
        hour: "numeric",
        minute: "2-digit",
    });
};

const justSaved = Astro.url.searchParams.get("saved") === "true";
const isArchived = lead.archived;
---

<Layout title={`Dossier: ${lead.name}`}>
    <div class="min-h-screen bg-[#353c33] text-white font-sans">
        <nav
            class="bg-[#1f241d] border-b border-[#353c33] px-6 py-4 flex justify-between items-center sticky top-0 z-50"
        >
            <div class="flex items-center gap-4">
                <a
                    href="/dashboard"
                    class="text-gray-400 hover:text-[#ea580c] text-xs font-bold uppercase tracking-widest transition-colors"
                >
                    ‚Üê Return to Command
                </a>
                <span class="text-[#353c33] text-xs">|</span>
                <span class="text-gray-500 text-xs font-mono uppercase"
                    >Subject ID: {String(lead.id).split("-")[0]}</span
                >

                {
                    isArchived && (
                        <span class="bg-yellow-500/10 text-yellow-500 border border-yellow-500/20 px-2 py-0.5 text-[10px] uppercase font-bold tracking-wider rounded-sm">
                            ARCHIVED
                        </span>
                    )
                }
            </div>

            {
                justSaved && (
                    <div class="bg-[#ea580c]/10 text-[#ea580c] px-3 py-1 rounded-sm border border-[#ea580c]/20 text-xs font-bold uppercase tracking-wider animate-pulse">
                        Intel Updated Successfully
                    </div>
                )
            }
        </nav>

        <main class="max-w-5xl mx-auto p-6 md:p-10">
            {
                saveError && (
                    <div class="mb-8 bg-red-900/50 border border-red-500 text-white p-4 rounded-sm shadow-lg animate-bounce">
                        <div class="flex items-center gap-3">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-6 w-6 text-red-400"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                                />
                            </svg>
                            <div>
                                <h3 class="font-bold uppercase tracking-wider text-sm">
                                    Save Failed
                                </h3>
                                <p class="font-mono text-xs text-red-200 mt-1">
                                    {saveError}
                                </p>
                            </div>
                        </div>
                    </div>
                )
            }

            <form method="POST" class="space-y-6">
                <div
                    class="flex flex-col md:flex-row md:justify-between md:items-start gap-4 pb-6 border-b border-[#576352]"
                >
                    <div>
                        <h1
                            class="text-3xl font-black uppercase tracking-tight text-white mb-1 flex items-center gap-3"
                        >
                            {lead.name}
                        </h1>
                        <div class="flex items-center gap-3">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-4 w-4 text-[#ea580c]"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                                    clip-rule="evenodd"></path>
                            </svg>
                            <span
                                class="text-[#ea580c] font-bold text-xs uppercase tracking-widest"
                                >{lead.geo_location || "Unknown Location"}</span
                            >
                            <span class="text-gray-500 text-xs">‚Ä¢</span>
                            <span class="text-gray-400 text-xs uppercase"
                                >Acquired: {timeSince(lead.created_at)}</span
                            >
                        </div>
                    </div>

                    <div class="flex gap-2">
                        {
                            isArchived ? (
                                <button
                                    type="submit"
                                    name="action"
                                    value="reactivate"
                                    class="bg-gray-700 hover:bg-gray-600 text-white px-6 py-2 rounded-sm font-bold uppercase tracking-wider text-sm shadow-lg transition-transform transform active:scale-95"
                                >
                                    Reactivate Op
                                </button>
                            ) : (
                                <button
                                    type="submit"
                                    name="action"
                                    value="archive"
                                    class="bg-[#1f241d] border border-[#353c33] hover:border-[#ea580c] text-gray-400 hover:text-[#ea580c] px-4 py-2 rounded-sm font-bold uppercase tracking-wider text-xs transition-colors"
                                >
                                    Archive
                                </button>
                            )
                        }

                        <button
                            type="submit"
                            name="action"
                            value="update"
                            class="bg-[#ea580c] hover:bg-[#c2410c] text-white px-6 py-2 rounded-sm font-bold uppercase tracking-wider text-sm shadow-lg transition-transform transform active:scale-95"
                        >
                            Save Intel
                        </button>
                    </div>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                    <div class="lg:col-span-2 space-y-6">
                        <div
                            class="bg-[#282e26] border-t-4 border-[#ea580c] p-6 shadow-md rounded-sm relative"
                        >
                            <h2
                                class="text-xs font-bold text-gray-500 uppercase tracking-widest mb-4"
                            >
                                Mission Status
                            </h2>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label
                                        class="block text-xs font-bold text-gray-400 uppercase mb-2"
                                        >Current Phase</label
                                    >
                                    <select
                                        name="status"
                                        class="w-full bg-[#1f241d] border border-[#353c33] text-white p-3 rounded-sm focus:border-[#ea580c] focus:ring-1 focus:ring-[#ea580c] outline-none transition-colors appearance-none"
                                    >
                                        {
                                            [
                                                "New",
                                                "Contacted",
                                                "In Progress",
                                                "Won",
                                                "Lost",
                                            ].map((s) => (
                                                <option
                                                    value={s}
                                                    selected={s === lead.status}
                                                >
                                                    {s}
                                                </option>
                                            ))
                                        }
                                    </select>
                                </div>
                                <div>
                                    <label
                                        class="block text-xs font-bold text-gray-400 uppercase mb-2"
                                        >Projected Value</label
                                    >
                                    <div class="relative">
                                        <span
                                            class="absolute left-3 top-3 text-gray-500"
                                            >$</span
                                        >
                                        <input
                                            type="number"
                                            name="estimated_value"
                                            value={lead.estimated_value}
                                            class="w-full bg-[#1f241d] border border-[#353c33] text-white p-3 pl-7 rounded-sm focus:border-[#ea580c] focus:ring-1 focus:ring-[#ea580c] outline-none transition-colors font-mono"
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div
                            class="bg-[#282e26] border border-[#1f241d] p-6 rounded-sm shadow-md"
                        >
                            <h2
                                class="text-xs font-bold text-gray-500 uppercase tracking-widest mb-4"
                            >
                                Subject Intel
                            </h2>
                            <div class="space-y-4">
                                <div>
                                    <label
                                        class="block text-xs font-bold text-gray-400 uppercase mb-1"
                                        >Full Name</label
                                    >
                                    <input
                                        type="text"
                                        name="name"
                                        value={lead.name}
                                        class="w-full bg-[#1f241d] border border-[#353c33] text-white p-2 rounded-sm focus:border-[#ea580c] outline-none placeholder:text-gray-600/50 placeholder:italic"
                                        placeholder="e.g. John Doe"
                                    />
                                </div>
                                <div class="grid grid-cols-2 gap-4">
                                    <div>
                                        <label
                                            class="block text-xs font-bold text-gray-400 uppercase mb-1"
                                            >Email Comm</label
                                        >
                                        <input
                                            type="email"
                                            name="email"
                                            value={lead.email}
                                            class="w-full bg-[#1f241d] border border-[#353c33] text-white p-2 rounded-sm focus:border-[#ea580c] outline-none placeholder:text-gray-600/50 placeholder:italic"
                                            placeholder="e.g. john@example.com"
                                        />
                                    </div>
                                    <div>
                                        <label
                                            class="block text-xs font-bold text-gray-400 uppercase mb-1"
                                            >Phone Comm</label
                                        >
                                        <input
                                            type="text"
                                            name="phone"
                                            value={lead.phone}
                                            class="w-full bg-[#1f241d] border border-[#353c33] text-white p-2 rounded-sm focus:border-[#ea580c] outline-none placeholder:text-gray-600/50 placeholder:italic"
                                            placeholder="e.g. (555) 123-4567"
                                        />
                                    </div>
                                </div>
                                <div class="grid grid-cols-2 gap-4">
                                    <div>
                                        <label
                                            class="block text-xs font-bold text-gray-400 uppercase mb-1"
                                            >Geo Location (City/State)</label
                                        >
                                        <input
                                            type="text"
                                            name="geo_location"
                                            value={lead.geo_location}
                                            class="w-full bg-[#1f241d] border border-[#353c33] text-white p-2 rounded-sm focus:border-[#ea580c] outline-none placeholder:text-gray-600/50 placeholder:italic"
                                            placeholder="e.g. Riverside, CA"
                                        />
                                    </div>
                                    <div>
                                        <label
                                            class="block text-xs font-bold text-gray-400 uppercase mb-1"
                                            >Requested Op (Service)</label
                                        >
                                        <input
                                            type="text"
                                            name="service"
                                            value={lead.service}
                                            class="w-full bg-[#1f241d] border border-[#353c33] text-white p-2 rounded-sm focus:border-[#ea580c] outline-none placeholder:text-gray-600/50 placeholder:italic"
                                            placeholder="e.g. Divorce"
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div
                            class="bg-[#282e26] border border-[#1f241d] p-6 rounded-sm shadow-md"
                        >
                            <h2
                                class="text-xs font-bold text-gray-500 uppercase tracking-widest mb-4"
                            >
                                Field Notes / Observation Log
                            </h2>
                            <textarea
                                name="notes"
                                rows="6"
                                class="w-full bg-[#1f241d] border border-[#353c33] text-white p-4 rounded-sm focus:border-[#ea580c] outline-none leading-relaxed text-sm font-mono placeholder:text-gray-600/50 placeholder:italic"
                                placeholder="Enter tactical observations here..."
                                >{lead.notes}</textarea
                            >
                        </div>
                    </div>

                    <div class="space-y-6">
                        <div
                            class="bg-[#282e26] border border-[#1f241d] p-5 rounded-sm shadow-md"
                        >
                            <h2
                                class="text-xs font-bold text-gray-500 uppercase tracking-widest mb-2"
                            >
                                Log Timestamp
                            </h2>
                            <div class="flex items-center gap-2">
                                <span
                                    class="h-2 w-2 rounded-full bg-[#ea580c] animate-pulse"
                                ></span>
                                <p class="text-white font-mono text-xs">
                                    {
                                        formatDateTime(
                                            lead.updated_at || lead.created_at,
                                        )
                                    }
                                </p>
                            </div>
                            <p class="text-[10px] text-gray-500 mt-1 uppercase">
                                Last activity recorded
                            </p>
                        </div>

                        <div
                            class="bg-[#282e26] border border-[#1f241d] p-5 rounded-sm shadow-md"
                        >
                            <h2
                                class="text-xs font-bold text-gray-500 uppercase tracking-widest mb-4"
                            >
                                Location Recon
                            </h2>
                            {
                                lead.geo_location ? (
                                    <div>
                                        <p class="text-xs text-gray-300 mb-3">
                                            Target located in{" "}
                                            <span class="font-bold text-white">
                                                {lead.geo_location}
                                            </span>
                                            .
                                        </p>
                                        <a
                                            href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(lead.geo_location)}`}
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            class="block w-full text-center bg-[#1f241d] border border-[#576352] hover:border-[#ea580c] text-white hover:text-[#ea580c] px-4 py-2 rounded-sm text-xs font-bold uppercase tracking-wider transition-colors"
                                        >
                                            üìç Open Sat Map
                                        </a>
                                    </div>
                                ) : (
                                    <p class="text-xs text-gray-500 italic">
                                        No location data available for recon.
                                    </p>
                                )
                            }
                        </div>

                        <div
                            class="bg-[#282e26] border border-[#1f241d] p-5 rounded-sm shadow-md"
                        >
                            <h2
                                class="text-xs font-bold text-gray-500 uppercase tracking-widest mb-4"
                            >
                                Source Intelligence
                            </h2>
                            <div class="space-y-4">
                                <div>
                                    <label
                                        class="block text-[10px] uppercase text-gray-500 font-bold mb-1"
                                        >UTM Source</label
                                    >
                                    <input
                                        type="text"
                                        name="utm_source"
                                        value={lead.utm_source}
                                        class="w-full bg-[#1f241d] border border-[#353c33] text-white font-mono text-sm p-2 rounded-sm focus:border-[#ea580c] outline-none placeholder:text-gray-600/50 placeholder:italic"
                                        placeholder="e.g. Google"
                                    />
                                </div>
                                <div>
                                    <label
                                        class="block text-[10px] uppercase text-gray-500 font-bold mb-1"
                                        >UTM Medium</label
                                    >
                                    <input
                                        type="text"
                                        name="utm_medium"
                                        value={lead.utm_medium}
                                        class="w-full bg-[#1f241d] border border-[#353c33] text-white font-mono text-sm p-2 rounded-sm focus:border-[#ea580c] outline-none placeholder:text-gray-600/50 placeholder:italic"
                                        placeholder="e.g. CPC"
                                    />
                                </div>
                                <div>
                                    <label
                                        class="block text-[10px] uppercase text-gray-500 font-bold mb-1"
                                        >UTM Campaign</label
                                    >
                                    <input
                                        type="text"
                                        name="utm_campaign"
                                        value={lead.utm_campaign}
                                        class="w-full bg-[#1f241d] border border-[#353c33] text-white font-mono text-sm p-2 rounded-sm focus:border-[#ea580c] outline-none placeholder:text-gray-600/50 placeholder:italic"
                                        placeholder="e.g. Spring_Promo"
                                    />
                                </div>
                            </div>
                        </div>

                        <div
                            class="border border-red-900/30 bg-red-900/10 p-5 rounded-sm"
                        >
                            <h2
                                class="text-xs font-bold text-red-500 uppercase tracking-widest mb-2"
                            >
                                Termination Protocol
                            </h2>
                            <button
                                type="submit"
                                name="action"
                                value="delete"
                                class="w-full border border-red-900 text-red-500 hover:bg-red-900 hover:text-white px-4 py-2 rounded-sm text-xs font-bold uppercase tracking-wider transition-colors"
                                onclick="return confirm('CONFIRM TERMINATION: Are you sure you want to delete this dossier?');"
                            >
                                Terminate Dossier
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </main>
    </div>
</Layout>
